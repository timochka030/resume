{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
                <section>
                    {{titler }}
                    <ul>
                        {{#each skills}}
                            <li>
                                {{name}}
                                {{#if point includeZero=true}} ({{point}}) {{/if}}

                                {{#if isTop}} (TOP) {{/if}}

                                {{#unless point includeZero=true}} (не вивчаэмо) {{/unless}}
                                
                                {{#unless point}}
                                    {{#if point includeZero=true}} (зараз вивчаэмо) {{/if}}
                                {{/unless}}
                            </li>
                        {{/each}}
                    </ul>
                </section>

                <section>
                    {{title}}
                    <ul>
                        {{#each hobbies}}
                            <li>
                                {{name}}
                                {{#if isMain isMain=true}} (favourite) {{/if}}
                            </li>
                        {{/each}}
                    </ul>
                </section>
            {{#with experience}}
                <section>
                    {{> title data=experience}}
                    <div>
                        <p>
                            {{text}}
                        </p>
                    </div>
                </section>
            {{/with}}
        </main>
    {{/with}}
</div>

