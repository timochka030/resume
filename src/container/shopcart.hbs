<div>
  <div class='row'>
    {{#with header}}
      <h1 class='mt-3'>{{title}}</h1>
      {{#with button}}
        <a
          class='col-3 btn btn-outline-success mt-3'
          href='{{link}}'
        >{{text}}</a>
      {{/with}}
    {{/with}}

    <hr class='my-5' />

      {{#each goodsBlock}}
        <div class="col-12 my-3">
          <div class='card'>
            <div class='card-body'>
              <div>
                <img
                  height="110px";
                  width="110px";
                  src='{{image}}'
                  alt='{{name}}'
                />
              </div>

              <div class="col-3">
                <div class='card-title'>{{name}}</div>
              </div>

              <div class="col-3">
                <p>{{description}}</p>
              </div>

              <div class="col-3">
                {{#with price}}
                  <div>{{title}}: {{value}}</div>
                {{/with}}
              </div>

              <div class="col-3">
                <div>{{amount}}</div>
              </div>

              <div class="col-3">
                {{#each buttons}}
                  <a href="#" class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                {{/each}}
              </div>
            </div>
          </div>
        </div>

      {{/each}}

      <hr>


  </div>
</div>