<main>
  <div class='row g-5'>
    <section class='col-12'>
      {{#with navigation}}
        {{#each links}}
          <a
            class='btn btn-link col-2'
            href='{{href}}'
          >{{text}}</a>
        {{/each}}
        <hr />
      {{/with}}
    </section>
    <div class='col-12'>
      <h1 class='mt-5'>{{header}}</h1>

      <div class='col-8'>
        {{#with contacts_data}}
          <h2 class='mt-5'>{{title}}</h2>
          <div class='mt-3'>
            {{#each buttons}}
              {{#if isPrimary}}<div
                  class='btn btn-warning'
                >{{text}}</div>{{/if}}

              {{#if isOutline}}<div
                  class='btn btn-outline-warning'
                >{{text}}</div>{{/if}}

            {{/each}}
          </div>
          
          <div>
                  {{#with form}}
                    {{#with input}}
                      <div class="row">
                      {{#with surname}}
                        <div class="col-4 my-3">
                          <label class='form-label'>{{label}}</label>
                          <input class='form-control' placeholder="{{placeholder}}" />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                        

                        {{#each action_block}}
                          <div class="col-4">
                          <div class="card">
                            <div class="card-body">
                            <div class="btn btn-success">{{text}}</div>
                            </div>
                          </div>
                        {{/each}}

                        

                        
                      {{/with}}
                      {{#with name}}
                          <div class="col-4 my-3">
                            <label class='form-label'>{{label}}</label>
                            <input class='form-control' placeholder="{{placeholder}}"/>
                            <div
                              class='form-text'
                            >{{caption}}</div>
                        </div>
                        {{/with}}

                        {{#with phone}}
                          <div class='col-4'>
                            <label class='form-label'>{{label}}</label>
                            <input class='form-control' placeholder="{{placeholder}}"/>
                            <div
                              class='form-text'
                            >{{caption}}</div>
                          </div>

                        {{/with}}
                      
                      {{#with email}}
                            <div class='col-4'>
                              <label class='form-label'>{{label}}</label>
                              <input class='form-control' placeholder="{{placeholder}}" />
                              <div
                                class='form-text'
                              >{{caption}}</div>
                            </div>
                        {{/with}}
                   </div>
                    
                  

                    {{/with}}
<br>
                    {{#each switch}} 
                      <div>
                        <div class='col-12'>
                          <div class='form-check form-switch '>
                            <label class='form-check-label'>{{text}}</label>
                            <input
                              name='food'
                              type='checkbox'
                              class='form-check-input {{#if isActive}}active{{/if}}'
                            />
                          </div>
                        </div>
                      </div>
                    {{/each}}<br>
                  {{/with}}
                  
                </div>

                <div class="col-4">
                    <div class="row">
                      <div class='card'>
                        <div class='card-body'>
                          {{#each action_block}}
                            <div class='btn btn-success'>{{text}}</div>
                          {{/each}}
                        </div>
                      </div>
                    </div>
                  </div>
        {{/with}}

                      

<hr>
      <div class='col-4'>
        <div class='card'>
          <div class='card-body'>
            <div class='btn btn-success'></div>
          </div>
        </div>
      </div>
</div>
</div>
   </div>
</main>